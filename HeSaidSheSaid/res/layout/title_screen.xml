<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/play"
            android:textSize="20dp"
            android:width="140dp" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/playButton"
            android:layout_below="@+id/playButton"
            android:layout_marginTop="86dp"
            android:text="@string/exit"
            android:textSize="20dp"
            android:width="140dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/quitButton"
            android:layout_below="@+id/playButton"
            android:layout_marginTop="20dp"
            android:text="@string/settings"
            android:textSize="20dp"
            android:width="140dp" />

        <TextView
            android:id="@+id/sheSaidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playButton"
            android:layout_alignLeft="@+id/playButton"
            android:layout_marginBottom="70dp"
            android:text="@string/she_said"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/heSaidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sheSaidText"
            android:layout_alignLeft="@+id/sheSaidText"
            android:text="@string/he_said"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp" />

    </RelativeLayout>

</LinearLayout>
