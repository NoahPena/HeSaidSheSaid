<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/listViewPlayerNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonBackEnterPlayerNames"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

        </ListView>

        <Button
            android:id="@+id/buttonOkEnterPlayerNames"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonBackEnterPlayerNames"
            android:layout_alignBottom="@+id/buttonBackEnterPlayerNames"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="@string/ok" />

        <Button
            android:id="@+id/buttonBackEnterPlayerNames"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:text="@string/back" />

    </RelativeLayout>

</LinearLayout>
