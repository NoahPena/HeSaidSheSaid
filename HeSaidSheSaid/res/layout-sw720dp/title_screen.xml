<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titleScreenRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="562.5dp"
            android:layout_height="187.5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_button" />

        <ImageButton
            android:id="@+id/quitButton"
            android:layout_width="562.5dp"
            android:layout_height="187.5dp"
            android:layout_alignLeft="@+id/playButton"
            android:layout_below="@+id/settingsButton"
            android:layout_marginTop="20dp"
            android:background="@drawable/quit_button" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="562.5dp"
            android:layout_height="187.5dp"
            android:layout_alignLeft="@+id/quitButton"
            android:layout_below="@+id/playButton"
            android:layout_marginTop="20dp"
            android:background="@drawable/howtoplay_button" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="750dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/playButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/titlebubble" />

    </RelativeLayout>

</LinearLayout>
